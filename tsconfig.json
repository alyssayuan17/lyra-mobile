{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true, // allow javascript
    "resolveJsonModule": true,
    "strict": false,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
